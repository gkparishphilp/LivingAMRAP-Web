#new_workout.modal.fade
	.modal-dialog
		.modal-content
			.modal-header
				%button.close{ type: :button, 'data-dismiss' => 'modal', 'aria-hidden' => 'true' }
					&times;
				%h4.modal-title
					New Workout
			= form_for Workout.new, url: main_app.workouts_path do |f|
				.modal-body
					= f.label :title
					= f.text_field :title, class: 'form-control'

					= f.label :workout_type
					= f.select :workout_type, [ [ 'AMRAP', 'amrap' ], ['Rounds For Time', 'rft'], [ 'For Time', 'ft' ], [ 'TABATA', 'tabata'], [ 'Every on the Minute', 'eotm' ], [ 'Custom', 'custom' ] ], {}, class: 'form-control'

				.modal-footer
					%button.btn.btn-default{ type: :button, 'data-dismiss' => 'modal' }
						Close
					= f.submit 'Create', class: 'btn btn-primary'